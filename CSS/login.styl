login:body
  margin: 0
  font-family: 'Trirong', serif
  background-image: url('Assets/1.jpg')
  background-size: cover
  background-position: center

.login-container
  display: flex
  justify-content: center
  align-items: center
  height: 100vh

.login-box
  background-color: rgba(51, 51, 51, 0.8)
  padding: 50px
  border-radius: 15px
  box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.5)
  text-align: center
  width: 300px

.login-box h2
  margin: 0 0 20px 0
  font-size: 24px
  color: #ffffff

.input-group
  margin-bottom: 15px

.input-group label
  display: block
  font-size: 16px
  color: #ffffff
  margin-bottom: 5px

.input-group input
  width: 100%
  padding: 10px
  font-size: 16px
  border: none
  border-radius: 5px

button
  width: 100%
  padding: 10px
  font-size: 18px
  color: #ffffff
  background-color: #a10000
  border: none
  border-radius: 5px
  cursor: pointer

button:hover
  background-color: #d10000

.register-link
  display: block
  margin-top: 15px
  font-size: 16px
  color: #ffffff
  text-decoration: none

.register-link:hover
  text-decoration: underline

